<script>


$(document).ready(function(){

  $('form').submit(function(){
    var username = $('#username').val();
    var password = $('#password').val();

    $.post("http://localhost:3000/login",{
      username: username,
      password: password
    });

    window.location.href="admin";
    return false;

  })
});

</script>



