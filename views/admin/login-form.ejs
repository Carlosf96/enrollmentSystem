<body>
  <div class="col-sm-5 col-sm-offset-4 modFormBorder col-xs-10 col-xs-offset-1">

    <form>
      <div class="form-group">
        <div class="inner-addon left-addon modMarginInput">
          <i class="fa fa-user"></i>
          <input type="text" id="username" class="form-control modBtnStrands" placeholder="Username.."/>
        </div>

        <div class="inner-addon left-addon">
          <i class="fa fa-unlock-alt"></i>
          <input type="password" id="password" class="form-control modBtnStrands" placeholder="Password.."/>
        </div>


        <div class="col-sm-4 col-sm-offset-8 col-xs-5 col-xs-offset-7">
          <div class="row">
            <input type="submit" class='btn btn-success btn-block modBtnStrands' value="Login">
          </div>
        </div>
        <div class="col-sm-4 col-sm-offset-8 col-xs-5 col-xs-offset-7">
          <div class="row">
            <a href="/" class='btn btn-default btn-block modBtnStrands'>Cancel</a>
          </div>
        </div>

      </div>
    </form>
  </div>
</body>
